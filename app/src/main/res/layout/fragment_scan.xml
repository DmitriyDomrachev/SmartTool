<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context="com.example.dima.smarttool.fragment.ScanFragment">
<!--TODO: карта с сотояниями при слайде вправо-->
    <TextView
        android:id="@+id/ScanFragmentBatteryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Battery"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/ScanFragmentWiFiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WiFi"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ScanFragmentBleutoothTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bluetooth"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ScanFragmentSoundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sound"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/ScanFragmentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

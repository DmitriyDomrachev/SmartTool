<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dima.smarttool.AddStateActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/noteToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Новое состояние"
        app:titleTextColor="@color/icons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/noteToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addStateNameTextView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Название"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/addStateNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Введите название"
                android:inputType="textPersonName"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addStateMediaSoundTextView"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Громкость медиа"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/addStateMediaSoundSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addStateSystemSoundTextView"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Системная громкость"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />


            <SeekBar
                android:id="@+id/addStateSystemSoundSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/addStateWiFiSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="WiFi"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/addStateBluetoothSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bluetooth"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/addStateConditionSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить условие запуска"
            android:textColor="@color/secondaryTextColor"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addStateConditionTextView"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/addStateSetTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Введите условие"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

        </LinearLayout>


        <Button
            android:id="@+id/addStateSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:text="Сохранить"
            android:textAlignment="center" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
